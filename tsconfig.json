{
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./",
    "noImplicitUseStrict": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "paths": {
      "@/*": ["./src/*"],
    },
  }
}