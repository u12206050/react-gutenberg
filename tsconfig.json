{
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["dom", "es2017"],
      "allowJs": true,
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmit": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["./src/*"],
      },
  }
}